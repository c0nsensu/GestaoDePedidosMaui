<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GestaoDePedidosMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GestaoDePedidosMaui"
    xmlns:pages="clr-namespace:GestaoDePedidosMaui.Pages"
    Shell.FlyoutBehavior="Flyout">

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate pages:Inicio}"
        Route="MainPage" />
        
        <ShellContent
        Title="Cadastro de Clientes"
        ContentTemplate="{DataTemplate pages:CadastroCliente}"
        Route="CadastroCliente" />

        <ShellContent
        Title="Sair"
        ContentTemplate="{DataTemplate pages:Login}"
        Route="Login" />
    </FlyoutItem>
    

</Shell>
